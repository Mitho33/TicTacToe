<Window x:Class="WpfTicTacToeObjekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTicTacToeObjekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid x:Name="Grid1">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FFCD7373" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="Erstellen" Content="Spiel erstellen" HorizontalAlignment="Left" Height="49" Margin="10,26,0,0" VerticalAlignment="Top" Width="86" Click="Erstellen_Click" Background="#FFD372D3"/>
        <Button Content="Neue Runde" HorizontalAlignment="Left" Height="50" Margin="10,112,0,0" VerticalAlignment="Top" Width="86" Background="#FF4A5A8D" Click="Button_Click"/>

    </Grid>
</Window>
